<% provide(:title, @user.email %>
<p><%= link_to "Voltar", users_path %></p>

<h1><%= @user.email %></h1>

<hr />



<ul id="tab" class="nav nav-tabs">
  <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
  <li><a href="#profile" data-toggle="tab">Profile</a></li>
  <li>
    <ul class="nav pills">
      <li class="dropdown" id="menu1">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
          Permissões
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Gerente", turns_manager_user_path(@user), :remote => true %></li>
          <li><%= link_to "Moderador", turns_moderator_user_path(@user), :remote => true %></li>
          <li><%= link_to "Usuário", turns_user_user_path(@user), :remote => true %></li>
          <li class="divider"></li>
          <li><a href="#">Administrador ???</a></li>
        </ul>
      </li>
    </ul>
  </li>
  <li><div id="remote-message"></div></li>
</ul>

<div id="myTabContent" class="tab-content">
  <!--
  #
  # TAB HOME
  #
  -->
  <div class="tab-pane fade in active" id="home">
    <p><i class="icon-user"></i><b>Tipo de conta:</b> <div id="role"><%= @user.role.camelcase %></div></p>
    <p><b>Data de cadastro:</b> <%= @user.created_at %></p>
    <p><b>IP atual:</b> <%= @user.current_sign_in_ip %></p>
  </div>

  <!--
  #
  # TAB PROFILE
  #
  -->
  <div class="tab-pane fade" id="profile">
    <p><b>Email:</b> <%= @user.email %></p>
    <p><b>Requisição de nova senha:</b> <%= @user.reset_password_sent_at %></p>
    <p><b>Requisição de lembrar senha:</b> <%= @user.remember_created_at %></p>
    <p><b>Última ação:</b> <%= @user.current_sign_in_at %></p>
    <p><b>Último login:</b> <%= @user.last_sign_in_at %></p>
    <p><b>Logins:</b> <%= @user.sign_in_count %></p>
    <p><b>IP do último login:</b> <%= @user.last_sign_in_ip %></p>
  </div>

  <div class="tab-pane fade" id="dropdown1">
  </div>

  <div class="tab-pane fade" id="dropdown2">
  </div>

</div>


<hr />

<p>Data da útima atualização de dados da conta: <%= @user.updated_at %></p>
