<% provide(:title, "Usuários do sistema") %>
<h1>Usuários do sistema</h1>
<h3>Total de <%= pluralize(@users.size, 'usuário') %> cadastrado até o momento.</h3>

<p><%= paginate @users %></p>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>E-mail</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
  <% for user in @users do %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.email, user_path(user) %></td>
      <td><%= user.role %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p><%= paginate @users %></p>
    


