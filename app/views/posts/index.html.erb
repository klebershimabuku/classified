<div class='pull-left'>
  <div class="page-header">
    <h1>Meus anúncios</h1>
  </div>
</div>
<div class='pull-right'>
  <%= link_to 'Novo anúncio', new_post_path, :class => 'btn btn-primary' %>
</div>

<div class='clear'></div>
<div class='feeds'>
  <% if @active_posts.any? %>
    <%= render partial: 'shared/post', collection: @active_posts %>
    <%= paginate @active_posts %>
  <% else %>
    <p>Não há anúncios para serem exibidos.</p>
  <% end %>

</div>
