<% provide(:title, 'Anúncios Pendentes') %>
<div class="row9">
  <div class='pull-left'>
    <div class="page-header">
      <h1>Anúncios Pendentes</h1>
    </div>
  </div>
  <div class='pull-right'>
    <%= link_to 'Novo anúncio', new_post_path, :class => 'btn btn-primary' %>
  </div>
</div>

<div class='clear'></div>
<div class='feeds'>

  <% if @pending_posts.any? %>
    <%= render partial: 'shared/post', collection: @pending_posts %>
    <%= paginate @pending_posts %>
  <% else %>
    <p>Não há anúncios para serem exibidos.</p>
  <% end %>

</div>
